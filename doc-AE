	图形类型
		namespace ESRI.ArcGIS.Geometry
		{
		    public enum esriGeometryType
		    {
		        // A geometry of unknown type.未知类型
		        esriGeometryNull = 0,
		        // A single zero dimensional geometry.单点
		        esriGeometryPoint = 1,
		        // An ordered collection of points.多点
		        esriGeometryMultipoint = 2,
		        // An ordered collection of paths.多段线
		        esriGeometryPolyline = 3,
		        // A collection of rings ordered by their containment relationship.多边形
		        esriGeometryPolygon = 4,
		        // A rectangle indicating the spatial extent of another geometry.包络线
		        esriGeometryEnvelope = 5,
		        // A connected sequence of segments.
		        esriGeometryPath = 6,
		        // Any of the geometry coclass types.
		        esriGeometryAny = 7,
		        // A collection of surface patches.
		        esriGeometryMultiPatch = 9,
		        // An area bounded by one closed path.
		        esriGeometryRing = 11,
		        // A straight line segment between two points.
		        esriGeometryLine = 13,
		        // A portion of the boundary of a circle.
		        esriGeometryCircularArc = 14,
		        // A third degree bezier curve (four control points).
		        esriGeometryBezier3Curve = 15,
		        // A portion of the boundary of an ellipse.
		        esriGeometryEllipticArc = 16,
		        // A collection of geometries of arbitrary type.
		        esriGeometryBag = 17,
		        // A surface patch of triangles defined by three consecutive points.
		        esriGeometryTriangleStrip = 18,
		        // A surface patch of triangles defined by the first point and two consecutive
		        // points.
		        esriGeometryTriangleFan = 19,
		        // An infinite, one-directional line extending from an origin point.
		        esriGeometryRay = 20,
		        // A complete 3 dimensional sphere.
		        esriGeometrySphere = 21,
		        // A surface patch of triangles defined by non-overlapping sets of three consecutive
		        // points each.
		        esriGeometryTriangles = 22,
		    }
		}
    属性字段类型
    	namespace ESRI.ArcGIS.Geodatabase
		{
		    public enum esriFieldType
		    {
		        // Short Integer.
		        esriFieldTypeSmallInteger = 0,
		        // Long Integer.
		        esriFieldTypeInteger = 1,
		        // Single-precision floating-point number.
		        esriFieldTypeSingle = 2,
		        // Double-precision floating-point number.
		        esriFieldTypeDouble = 3,
		        // Character string.
		        esriFieldTypeString = 4,
		        // Date.
		        esriFieldTypeDate = 5,
		        // Long Integer representing an object identifier.
		        esriFieldTypeOID = 6,
		        // Geometry.
		        esriFieldTypeGeometry = 7,
		        // Binary Large Object.
		        esriFieldTypeBlob = 8,
		        // Raster.
		        esriFieldTypeRaster = 9,
		        // Globally Unique Identifier.
		        esriFieldTypeGUID = 10,
		        // Esri Global ID.
		        esriFieldTypeGlobalID = 11,
		        // XML Document.
		        esriFieldTypeXML = 12,
		    }
		}
	图层添加标记
		IActiveView activeView=axMapControl1.ActiveView;
		IGraphicsContainer pGC = activeView.FocusMap as IGraphicsContainer;
	    IPoint ipNew = new PointClass();
	    //屏幕坐标转地图坐标
        //ipNew = activeView.ScreenDisplay.DisplayTransformation.ToMapPoint(e.x, e.y);
	    ipNew.PutCoords(0, 0);
	    //创建颜色
	    IRgbColor color = new RgbColorClass();
	    color.Red = 255;
	    color.Blue = 255;
	    color.Green = 0;
	    //创建图形标注
	    /*
        //文字标注
        ITextSymbol symbol = new TextSymbol();
        symbol.Color = color as IColor;
        symbol.Size = 15;
        symbol.Font.Bold = true;
        ITextElement textelement = new TextElementClass();
        textelement.Symbol = symbol;
        textelement.Text = "Text";
        IElement element = textelement as IElement;
        */
        //点标注
        ISimpleMarkerSymbol symbol = new SimpleMarkerSymbolClass();
        symbol.Color = color;
        symbol.Size = 4;
        symbol.Style = esriSimpleMarkerStyle.esriSMSDiamond;
        IMarkerElement markerElement = new MarkerElementClass();
        markerElement.Symbol = symbol;
        IElement element = markerElement as IElement;
	    
	    element.Geometry = ipNew;
	    pGC.AddElement(element, 0);
	    activeView.PartialRefresh(esriViewDrawPhase.esriViewGraphics, null, null);